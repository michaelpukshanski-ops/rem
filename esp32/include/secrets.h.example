#ifndef SECRETS_H
#define SECRETS_H

// ============================================================================
// WiFi Credentials (OPTIONAL - can be set via web portal)
// ============================================================================

// Your WiFi network SSID (leave empty to use web portal only)
#define WIFI_SSID ""

// Your WiFi password (leave empty to use web portal only)
#define WIFI_PASSWORD ""

// ============================================================================
// API Configuration
// ============================================================================

// API Gateway endpoint URL (from Terraform output)
// Example: "https://abc123xyz.execute-api.us-east-1.amazonaws.com/ingest"
#define API_GATEWAY_URL "https://YOUR_API_GATEWAY_ID.execute-api.REGION.amazonaws.com/ingest"

// API Key for authentication (from Terraform output or AWS Console)
#define API_KEY "your-api-key-here"

// ============================================================================
// User Configuration
// ============================================================================

// User ID (should match the userId in your AWS setup)
#define USER_ID "default-user"

#endif // SECRETS_H

